<div class="container">
  <div class="row">
    <h1 class="center-align">Eat-The-Burger</h1>
  </div>
  <div class="row burgers-content z-depth-3 is-flex colorhelper">
        <h4 class="center-align">Burgers to be Inhaled</h4>
      {{#each burger}}
        {{#unless devoured}}
          <div class="row">
            <div class="center-align">
              <span class="burger-name-span col s7">
                {{this.id}}:
                {{this.burger_name}}
              </span>
            <div class="col s3 right-align">
              <a class="waves-effect waves-red btn-flat change-btn eaten-btn" data-id="{{id}}">Eaten</a>
            </div>
            </div>
          </div>
        {{/unless}}
      {{/each}}
      <h4 class="center-align">Burgers Eaten</h4>
      {{#each burger}}
        {{#if devoured}}
          <div class="row">
            <div class="col s8">
              <span class="burger-name-span">
              {{this.id}}:
              {{this.burger_name}}
            </span>
            </div>
            <div class="col s4">
              <a class="waves-effect waves-red btn-flat change-btn delete-btn" data-id="{{id}}">Delete</a>
            </div>
          </div>
        {{/if}}
      {{/each}}
  </div>





  <div class="row">
    <div class="col s12">
      <form id="add-burger-area" class="create-burger">
        <textarea id="text-area" class="z-depth-3" type="text" placeholder="Add a burger here..." maxlength="50"></textarea>
        <button class="btn waves-effect black waves-light" type="" name="action">
          <i class="material-icons right">Add</i>
        </button>
      </form>
    </div>
  </div>
